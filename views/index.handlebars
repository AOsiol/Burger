<div class="container-fluid">


    <h1>Burgers!</h1>

    <h2>Burgers that are not devoured!</h2>

    <ul>
        {{#each burgers}}
        {{!-- {{#unless devoured}} --}}
        <li>
            {{burger_name}}
            {{!-- <input type="radio" name="devoured" value="1"> Devoured<br> --}}
            <button type="submit" id="devoured">Devoured</button>
        </li>
        {{!-- {{/unless}} --}}
        {{/each}}
    </ul>



    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Type:</label>
            <input type="text" id="ca" name="burger_name">
            <button type="submit">Add Burger</button>
        </div>

        {{!-- <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1"> Devoured<br>
        <input type="radio" name="devoured" value="0" checked> Not Devoured
    </div> --}}


    </form>

    <h2>Burgers that are devoured!</h2>

    <ul>
        {{!-- {{#each burgers}} --}}
        {{#if devoured}}
        {{burger_name}}
        {{/if}}
        {{!-- {{/each}} --}}
    </ul>
</div>

